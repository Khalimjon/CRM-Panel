{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "build",
    "module": "commonjs",
    "target": "ES2020",
    "declaration": true,
    "declarationDir": "typings",
    "newLine": "lf"
  },
  "include": ["src/**/*"]
}
